{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "dist",
    },
    "include": ["src"]
}
